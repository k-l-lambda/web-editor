{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"strict": false,
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"app/*"
			]
		},
		"lib": [
			"es2016",
			"es5",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"skipLibCheck": true,
		"noImplicitAny": false,
		"declaration": true,
		"outDir": "lib.browser"
	},
	"include": [
		"index.frontend.ts",
		"frontend/**/*.ts",
	],
	"exclude": [
		"./node_modules/*"
	]
}
